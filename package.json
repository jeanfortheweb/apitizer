{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@commitlint/config-angular": "^8.3.4",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "commitlint": "^8.3.5",
    "conventional-changelog-eslint": "^3.0.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "semantic-release": "^15.13.27",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.17.0-3",
    "typescript": "^3.7.5",
    "xhr-mock": "^2.5.1"
  },
  "scripts": {
    "compile:cjs": "rm -rf lib/cjs && tsc --p tsconfig.cjs.json",
    "compile:esm": "rm -rf lib/esm && tsc --p tsconfig.esm.json",
    "compile:docs": "typedoc --excludeNotExported --exclude ./src/__tests__ --readme none --mode library --out ./docs ./src/index.ts"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "eslint . --ext .ts,.tsx",
      "pre-push": "yarn tsc --noEmit"
    }
  }
}
